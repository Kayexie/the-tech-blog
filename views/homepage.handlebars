{{!-- loop over the post in the post array --}}
{{#each posts as |post|}}
<div class="card text-center">
    <div class="card-header">
        {{post.title}}
    </div>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
        <!-- this button will go to the post detail page to add and view comment -->
        <a href="/posts/{{post.id}}" class="btn btn-primary">View Details</a>
    </div>
    <div class="card-footer text-muted">
        Created by{{post.user.username}} on {{format_date post.date_created}}
    </div>
</div>
{{/each}}